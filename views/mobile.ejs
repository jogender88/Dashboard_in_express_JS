<!DOCTYPE html>
<html>
<!-- ng-app="myApp" -->

<head>
    <title>Mobile</title>
    <link href="static/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="static/css/site.css" rel="stylesheet" type="text/css" />
    <script src="static/js/jquery-3.3.1.min.js"></script>
    <script src="static/js/bootstrap.js"></script>
    <script src="static/js/angular.min.js"></script>



    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery.form/3.51/jquery.form.min.js"></script>
    <script>
        $(document).ready(function() {  
       $('#uploadForm').submit(function() {  
           $("#status").empty().text("File is uploading...");  
    
          $(this).ajaxSubmit({  
    
              error: function(xhr) {  
                      status('Error: ' + xhr.status);  
              },  
    
              success: function(response) {  
                      console.log(response)  
                      $("#status").empty().text(response);  
              }  
      });  
    
      return false;  
      });      
  });  
    </script>
</head>

<body>
    <!-- ng-controller="myController" -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Panky Tutorials</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/home">Home</a>
                    </li>
                    <li>
                        <a href="/about">About</a>
                    </li>
                    <li>
                        <a href="/contact">Contact</a>
                    </li>
                    <li>
                        <a href="/gallery">Gallery</a>
                    </li>
                    <li>
                        <a href="/feedback">Feedback</a>
                    </li>
                    <li class="active">
                        <a href="/mobile">Add new Mobiles</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right logout">
                    <li>
                        <a href="#">Welcome
                            <%= username%>
                        </a>
                    </li>
                    <li>
                        <a href="/logout">Logout</a>
                    </li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </nav>
    <div class="container body-content">
        <br />
        <h2>
            <%= title %>
        </h2>
        <br>
        <div ng-app="myApp">
            <div ng-controller="mobilecontroller">
                <table border="1">
                    <tr>
                        <th>Id</th>
                        <th>Company</th>
                        <th>Operating System</th>
                        <th>Processor</th>
                        <th>Price</th>
                        <th>File Name</th>
                        <th>Actions</th>

                    </tr>
                    <tr ng-repeat="mob in mobile">
                        <td>{{mob.dat.id}}</td>
                        <td>{{mob.dat.company}}</td>
                        <td>{{mob.dat.os}}</td>
                        <td>{{mob.dat.processor}}</td>
                        <td>{{mob.dat.price}}</td>
                        <td>{{mob.name}}</td>
                        <td>

                            &nbsp;&nbsp;
                            <a href="/update/{{mob.id}}">Edit</a>
                            &nbsp;&nbsp;|&nbsp;&nbsp;
                            <a href="/retrieve/{{mob.id}}">Details</a>
                            &nbsp;&nbsp;|&nbsp;&nbsp;
                            <a href="/delete/{{mob.id}}">Delete</a>
                            &nbsp;&nbsp;
                        </td>
                    </tr>
                </table>

            </div>
        </div>

        <br />
        <form method="POST">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="control-label col-md-2"> Id</label>
                    <div class="col-md-3">
                        <input type="text" name="id" class="form-control" required />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Company</label>
                    <div class="col-md-3">
                        <input type="text" name="company" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Operating System</label>
                    <div class="col-md-3">
                        <input type="text" name="os" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Processor</label>
                    <div class="col-md-3">
                        <input type="text" name="processor" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2">Quantity</label>
                    <div class="col-md-3">
                        <input type="text" name="quantity" class="form-control" />
                    </div>
                </div>



                <div class="form-group">
                    <label class="control-label col-md-2">Price</label>
                    <div class="col-md-3">
                        <input type="text" name="price" class="form-control" />
                        <br />
                        
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-2"><a href="/uploadimage">Uplaod Image</label>
                       
                            
                        </div>
                        <br />
                        <input type="submit" value="SUBMIT" class="btn btn-primary" />
                    </div>
                </div>


            </div>
        </form>
           
        <footer>
            2018 &copy; Panky Tutorials
        </footer>
    </div>
    <script>
        var mobiles = <%- JSON.stringify(mobilelist)%>;
    </script>
    <script src="static/js/app.js"></script>
</body>

</html>